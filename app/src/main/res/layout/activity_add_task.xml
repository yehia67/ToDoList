<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yehia.todo_list.AddTask">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ET_taskname"
        android:layout_alignBottom="@+id/ET_taskname"

        android:layout_alignParentStart="true"
        android:text="Task:-"
        android:textSize="30dp"
        tools:textColor="@android:color/black" />

    <EditText
        android:id="@+id/ET_taskname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter your task here!!"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="TASK DESCRIPTION:-"
        tools:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_below="@+id/ET_taskname"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ET_taskdescr"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" WRITE HERE"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ET_taskdescr"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:onClick="Onclick"
        android:text="Save" />

    <Button
        android:id="@+id/bt_discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_save"
        android:layout_alignEnd="@+id/ET_taskname"
        android:layout_marginEnd="49dp"
        android:onClick="Onclick"
        android:text="Discard" />
</RelativeLayout>
